macro macAddSpace(sIn:string,iLen:integer,sSpace):string
  var 
     sRet:string,
     i:integer;
  sRet=sIn;
  i=int(0);
  if (strLen(sSpace)>0)
    while(i<iLen-strlen(sIn))
      sRet=sSpace+sRet;
      i=i+1;
    end;
  end;
  return sRet;
end;

//подпрограмма проверки повторного ручного ввода
macro macCheckRow()
  intday=0;
  intmon=0;
  intyear=0;
  DateSplit(dteStopDate,intday,intmon,intyear);
  strday="";
  strmon="";
  if (StrLen(String(intday))==1)
    strday="0"+String(intday);
  else
    strday=String(intday);
  end;
  if (StrLen(String(intmon))==1)
    strmon="0"+String(intmon);
  else
    strmon=String(intmon);
  end;
  strFileName=Trim(String(sn.KOD))+String(intyear)+strmon+strday+"_"+Trim(strStopNum)+"_"+strAcc+"_"+String(mneRecSum)+"_M";
  if (intTypeKind==1)
    strKind="Р";
    strFileName="RPO16359826_"+strFileName;
  elif (intTypeKind==0)
    strKind="О";
    strFileName="ROO16359826_"+strFileName;
  end;
  rewind(stop5);
  stop5.Kind=strKind;
  stop5.FileName=strFileName;
  if (getEQ(stop5))
    return true;
  else
    //проверяем на совпадение по номеру и дате сообщения
    //add Polyakov S.George 30.08.2011
    rewind(r_stop6);
    r_stop6.StopNumber=strStopNum;
    r_stop6.StopDate=dteStopDate;
    r_stop6.Kind=strKind;
    if (
        getEQ(r_stop6)
       )
       //найдено дублирующее совпадение
       //проверить по этому же счету оно
       //если - ДА, то дубликат полный
       rewind(r_ac_ar0);
       r_ac_ar0.ID=r_stop6.ID;
       if (getEQ(r_ac_ar0))
         //проверяем полное соответствие - счет, глава счетов, код валюты
         bNext=true;
         flgDblAcc=false;
         //msgbox(intCode_Cur+" "+strAcc);
         while (bNext)
           if (r_ac_ar0.ID==r_stop6.ID)
             if (
                  (r_ac_ar0.Chapter==I_CHAPTER) and
                  (r_ac_ar0.Code_Currency==intCode_Cur) and
                  (r_ac_ar0.Account==strAcc)
                )
                //полное совпадение 
               flgNextAcc=true;
               bNext=false;
               return flgNextAcc;
             else
               bNext=next(r_ac_ar0);
             end;
           else
             bNext=false;
           end;
         end;
         //закончили цикл - проверяем флаг
         if (flgNextAcc)
           return flgNextAcc;
         else
           return false;
         end;
       else
         return false;
       end;
    else
       return false;
    end;
  end;
end;

macro macDlgInp(inp,cmd,id,key)
  if (cmd==DLG_INIT)
    message(strMesLowDlg);

      MsgBox("ПОВТОРНЫЙ ВВОД! ЗАПИСЬ УЖЕ ПРИСУТСТВУЕТ В ЖУРНАЛЕ!");
      Return CM_CANCEL;
    end;
  elif(cmd==DLG_DESTROY)
  elif (cmd==DLG_KEY)
    if (key==27) //ESC
      if (not GetTrue(true,"ХОТИТЕ ОТМЕНИТЬ ВВОД?"))
        Return CM_IGNORE;

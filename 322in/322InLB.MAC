    inp.fldRecNum="";
    inp.fldRecDate=Date(0,0,0);
    inp.fldRecSum=Moneyl(0);
    UpdateFields(inp);
  elif (cmd==DLG_SAVE)
    //Проверка кода налоговой
    if (StrLen(Trim(inp.fldRegNum))!=0)
       flgSn=false;
        lngCnt=0;
        rewind(sn);
        while((not flgSn) and (next(sn)))
          lngCnt=lngCnt+1;
          message("ИДЕТ ПРОСМОТР СПРАВОЧНИКА СОУН:"+lngCnt);
          if ((Trim(inp.fldRegNum)==Trim(sn.KOD)) and (Trim(sn.DATAK)==""))
            flgSn=true;
          end;
        end;
        message(strMesLowDlg);
        if (not flgSn)
          MsgBox("В СПРАВОЧНИКЕ СОУН НЕ НАЙДЕН ДАННЫЙ НО!");
          SetFocus(inp,0);
          return CM_CANCEL
        else
          strRegNum=fldRegNum;
        end;
    else
       MsgBox("НЕ ПРОСТАВЛЕН КОД НАЛОГОВОГО ОРГАНА");
       SetFocus(inp,0);
       Return CM_CANCEL;
    end;
    //Проверка номера решения о приостановлении
    if (StrLen(Trim(inp.fldStopNum))==0)
      MsgBox("НЕ ПРОСТАВЛЕН НОМЕР РЕШЕНИЯ О ПРИОСТАНОВЛЕНИИ!");
      SetFocus(inp,1);
      Return CM_CANCEL;
    else
      strStopNum=Trim(inp.fldStopNum);
    end;
    if (inp.fldStopDate==Date(0,0,0))
      MsgBox("УКАЖИТЕ ДАТУ РЕШЕНИЯ О ПРИОСТАНОВЛЕНИИ!");
      SetFocus(inp,2);
      Return CM_CANCEL;
    else
      dteStopDate=inp.fldStopDate;
    end;
    if (StrLen(Trim(inp.fldRecNum))!=0)
      strRecNum=Trim(inp.fldRecNum);  
    else
      strRecNum="";
    end;
    dteRecDate=inp.fldRecDate;
    mneRecSum=inp.fldRecSum;

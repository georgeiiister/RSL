   flagSOUN = true;
   iSoun = 0;
   SetDelim(",");
   while((next(soun)) AND flagSoun)
    iSoun = iSoun + 1;
    message(iSoun);
    if((Trim(String(Soun.KOD)) == SubStr(KPPStr,1,4)) AND (Trim(Soun.DATAK) == ""))
     nF = Soun.NAIMK;

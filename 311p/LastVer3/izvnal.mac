macro GetLastAccountNumPor()
// Получает порядковый номер счета с начала года (для нового счета)
 var yy, yy2;
 var Dep = IzvGetDepartment();
 datesplit({curdate},null,null,yy);
 
 rewind(izv11);
 ClearRecord(izv11);
 izv11.Department = Dep;
 izv11.Date = {curdate};
 izv11.NumPor = 9999;
 if(GetLE(izv11) AND (izv11.Department == Dep))
  datesplit(izv11.Date,null,null,yy2);
  if(yy == yy2) // Не перешли через год
   return izv11.NumPor + 1;
  end;
 end;
 return 1;
end;

macro GetAccountNumPor(acc)
// Получает порядковый номер счета с начала года (для существующего счета). Если не найден такой счет - возвращает текущий порядковый
 rewind(izv10);
 ClearRecord(izv10);
 izv10.Account = acc;
 if(GetEQ(izv10) AND (izv10.Account == acc))
  return izv10.NumPor;
 else
  return GetLastAccountNumPor();
 end;
end;


macro izvGetNumBlank(NumPor, DateOpen, acc, iNumBlank)
/* Формирует длинный номер бланка.
   iNumBlank - для возврата интового номера сообщения о данном счете 
*/
 var s,yy,syy,s2;
 s = String(NumPor);
 while(strlen(s) < 6)
  s = "0"+s;
 end;
 datesplit(DateOpen,null,null,yy);
 syy = SubStr(String(yy),3,2); // В номере бланка участвуют последние 2 цифры года

 s = "28670000"+syy+s+"/";

 rewind(izv2);
 ClearRecord(izv2);
 izv2.Account = acc;
 izv2.Num = 999;
 if(GetLE(izv2) AND (izv2.Account == acc))
  NumPor = izv2.Num + 1;
 else
  NumPor = 1;
 end;
 SetParm(3, NumPor);
 s2 = String(NumPor);
 while(strlen(s2) < 3)
  s2 = "0"+s2;
 end;

 return s + s2;
end;


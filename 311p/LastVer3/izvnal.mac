macro IsIzvAccount(acc, ctype)
 var bal3, bal5;
 if(SubStr(acc,14,1) != "0")
  return false; // Не берем транзитные, спецтранзитные и т.д. счета
 end;
 bal3 = SubStr(acc,1,3);
 bal5 = SubStr(acc,1,5);
 if((bal5 == "30109") OR (bal5 == "30112") OR (bal5 == "30231"))
  return true;
 end;

 if(SubStr(acc,1,2) == "40")
  if((bal5 == "40803") OR ((bal5 == "40806") AND (Index(ctype,"Ф") > 0)) OR
     ((bal5 == "40809") AND (Index(ctype,"Ф") > 0)) OR
     (bal5 == "40810") OR ((bal5 == "40812") AND (Index(ctype,"Ф") > 0)) OR
     (bal5 == "40813") OR ((bal5 == "40814") AND (Index(ctype,"Ф") > 0)) OR
     ((bal5 == "40815") AND (Index(ctype,"Ф") > 0)) OR
     (bal5 == "40817") OR ((bal5 == "40819") AND (Index(ctype,"Ф") > 0)) OR
     (bal5 == "40820") OR (bal3 == "409")
    )
   return false;
  else
   return true;
  end;
 end;
 if(SubStr(acc,1,2) == "41")
  return true;
 end;
 if(SubStr(acc,1,2) == "42")
  if((bal3 == "423") OR (bal3 == "426"))
   return false;
  else
   return true;
  end;
 end;

 return false;
end;


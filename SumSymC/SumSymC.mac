//макрос возвращающий остаток по лицевому счету
//балансовые рублевые/валютные, с 
//указанным или нет валютным значением
macro macSSBalRestA(sTbl:string,sBal:string,dDate:date,sVal:string):money
  var
     mRet:money,
     i:integer,
     sAcc:string,
     bNext:bool,
     bYes:bool,
     oTbl:Object;
  mRet=money(0);
  sAcc="";
  i=0;
  oTbl=TBFile(sTbl,"r",0,null,"bank.def");
  while (I_ACC_LEN-StrLen(sBal)!=StrLen(sAcc))
    sAcc=sAcc+"0";
  end;
  sAcc=sBal+sAcc;
  oTbl.rec.Account=sAcc;
  bNext=true;
  rewind(oTbl);
  if (getge(oTbl))
    while(bNext)
      if (
          (oTbl.rec.Balance==sBal) and
          (index(oTbl.rec.Type_Account,"П")==0)
         )
        bYes=true;
        if (ValType(sVal)!=V_UNDEF)
          if (SubStr(oTbl.rec.Account,I_BAL_LEN+1,I_VAL_LEN)!=sVal)
            bYes=false;
          end;
        end;
        if (bYes)
          mRet=mRet+restA(oTbl.rec.Account,dDate);
        end;
      else
         bNext=false;
      end;
      bNext=next(oTbl);
    end;
  end;
  return mRet;
end;

